  "bugs": {
    "url": "https://github.com/zkreations/typography/issues"
  },
  "homepage": "https://github.com/zkreations/typography#readme",
  "devDependencies": {
    "browserslist": "^4.24.4",
    "clean-css-cli": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-standard-scss": "^13.1.0"
  }
}
